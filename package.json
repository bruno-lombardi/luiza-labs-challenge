{
  "name": "luizalabs-challenge-wishlist",
  "version": "1.0.0",
  "description": "HTTP API developed to attend scenario descripted in LuizaLabs selection process challenge.",
  "main": "index.js",
  "author": "Bruno Lombardi <bruno.vbl@hotmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/bcrypt": "^3.0.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mongodb": "^3.6.12",
    "@types/node": "^14.14.37",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "4",
    "coveralls": "^3.1.0",
    "eslint": "7",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "2",
    "eslint-plugin-node": "11",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "4",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sucrase": "^3.18.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "start": "node dist/main/server.js",
    "debug": "node --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "dev": "sucrase-node src/main/server.ts",
    "build:watch": "rimraf dist && tsc -w",
    "up": "yarn build && docker-compose up -d",
    "down": "docker-compose down",
    "test": "jest --passWithNoTests --silent --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "jest --passWithNoTests --runInBand --watch -c jest-unit-config.ts",
    "test:integration": "jest --passWithNoTests --runInBand --watch -c jest-integration-config.ts",
    "test:staged": "yarn test --findRelatedTests",
    "test:ci": "yarn test --coverage",
    "test:coveralls": "yarn run test:ci && coveralls < coverage/lcov.info",
    "post:install": "husky install"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.6",
    "validator": "^13.5.2"
  },
  "engines": {
    "node": "12.x"
  }
}
